@model CareeriaDevsApp.Viesti

@{
    ViewBag.Title = "Luo uusi viesti";
}

<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckeditor/samples/js/sample.js"></script>

<div class="container">
    <div class="row">
        <div class="col">

            <h1 class="m-5 text-center">Luo uusi viesti</h1>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label for="inbox">Otsikko</label>
                        @Html.EditorFor(model => model.inbox, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.inbox, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label for="viestiLoki">Viesti</label>
                        @Html.TextAreaFor(model => model.viestiLoki, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.viestiLoki, "", new { @class = "text-danger" })
                        <script type="text/javascript" language="javascript">CKEDITOR.replace(@Html.IdFor(model => model.viestiLoki));@*CKEDITORI korvaa mvc:n editorin*@</script>
                    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lähetä viesti" class="btn btn-default" />
            </div>
        </div>
    </div>
}

        <div>
            @Html.ActionLink("Takaisin listanäkymään", "Index", null, new { @class = "btn btn-light mb-3" })
        </div>

        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
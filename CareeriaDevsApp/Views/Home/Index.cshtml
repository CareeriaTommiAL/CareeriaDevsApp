@{
    ViewBag.Title = "Home Page";
}

<!-- ETUSIVUN SISÄLTÖ ALKAA -->
<!-- Students -->
<section id="students">
    <div class="container">
        <div class="row">
            <div class="students-col col d-flex flex-column justify-content-center align-items-center">
                <h1>Työnhakijat</h1>
                <span>— Tee profiili ja tule löydetyksi</span>
                <p>
                    Rekisteröidy työnhakijaksi
                    @*<button type="button" class="btn btn-yellow">Tästä</button>*@
                    <input type="button" class="btn btn-yellow" value="Tästä" onclick='window.location.href = "@Url.Action("OppilasRekisterointi", "Logins", routeValues: null)"'/>
                </p>
            </div>
            <div class="col d-flex align-items-center">
                <p>
                    Opiskelija – rekisteröityneenä käyttäjänä voitte luoda kaikille
                    näkyvissä olevan henkilöprofiilin. Tämä edesauttaa
                    mahdollisuuksianne työelämään siirtymisessä. Sivuston avulla
                    löydätte monia mielenkiintoisia työpaikkoja ja se tarjoaa teille
                    väylän ottaa ensikontakti työnantajaan.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Empolyers -->
<section id="employers">
    <div class="container">
        <div class="row">
            <div class="students-col col d-flex flex-column justify-content-center align-items-center">
                <h1>Työnantajat</h1>
                <span>— Työllistä opiskelija yritykseesi</span>
                <p>Rekisteröidy työnantajaksi</p>
                <p>
                    Rekisteröidy työnhakijaksi
                    @*<button type="button" class="btn btn-yellow">Tästä</button>*@
                    <input type="button" class="btn btn-yellow" value="Tästä" onclick='window.location.href = "@Url.Action("YritysRekisterointi", "Logins", routeValues: null)"' />
                </p>
            </div>
            <div class="students-col col d-flex flex-column justify-content-center align-items-center">
                <p>
                    Työnantaja – rekisteröityneenä käyttäjänä saatte suoran yhteyden
                    sellaiseen henkilöön, kenen opiskelijaprofiili tuntuu täydentävän
                    teidän yhtiönne tarpeita. Voitte rekisteröityneenä käyttäjänä
                    täydentää myös yrityksenne profiilia helpottamaan opiskelijoiden
                    kynnystä tarjota osaamistaan teille.
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Intro -->
<section id="intro">
    <div class="container">
        <div class="row">
            <div class="col text-center mb-5">
                <h2>{ JobApp } Pähkinänkuoressa</h2>
            </div>
        </div>
        <div class="row">
            <div class="col d-flex flex-column justify-content-center align-items-center">
                <img src="~/Images/vapaapaikka.png" />
            </div>
            <div class="col d-flex flex-column justify-content-center align-items-center">
                <p>
                    Tervetuloa Careeria -oppilaitoksen ohjelmoinnin osaajien
                    työnhakusivustolle.<br />

                    Sivusto esittelee oppilaitoksen opiskelijoiden osaajaprofiileita.
                    Sivusto on työkalu, jonka avulla työnantaja ja tulevaisuuden
                    työntekijä löytävät toisensa.<br />

                    Sivusto on toteutettu kouluprojektina ohjelmoinnin opiskelijoiden
                    toimesta.
                </p>
            </div>
        </div>
    </div>
</section>


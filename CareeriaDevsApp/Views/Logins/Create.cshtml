@model CareeriaDevsApp.Login

@{
    ViewBag.Title = "Create";
}

    <div class="container">
        <div class="row">
            <div class="col">

                <h2 class="m-5 text-center">Admin / Luo käyttäjä</h2>


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.kayttajaNimi, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.kayttajaNimi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.kayttajaNimi, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.salasana, htmlAttributes: new { @class = "control-label" })
                            @Html.EditorFor(model => model.salasana, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.salasana, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.opiskelija_Id, "opiskelija_Id", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("opiskelija_Id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.opiskelija_Id, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.yritys_Id, "yritys_Id", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("yritys_Id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.yritys_Id, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.paaKayttaja_Id, "paaKayttaja_Id", htmlAttributes: new { @class = "control-label" })
                            @Html.DropDownList("paaKayttaja_Id", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.paaKayttaja_Id, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Luo käyttäjä" class="btn btn-success" />
                        </div>
                }

            <div>
                @Html.ActionLink("Takaisin listanäkymään", "Index", null, new { @class = "btn btn-light" })
            </div>

            </div>
        </div>
    </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }

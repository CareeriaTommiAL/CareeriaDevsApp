<!--Tuplea hyväksikäyttäen voi linkata kaikkiin tarvittaviin Entitymodelissa oleviin classeihin tai omiin classeihin***************-->
<!--**********************************************************OPPILASREKISTERÖINTI*************************************************-->
@model Tuple<CareeriaDevsApp.Login, CareeriaDevsApp.Models.OpiskelijaModel, CareeriaDevsApp.Models.PostitoimipaikkaModel, CareeriaDevsApp.Models.PuhelinNumeroModel>

<div class="container">

    <div class="row">

        <div class="col">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <form>

                <h1 class="m-5 text-center">Tietojen päivitys</h1>

                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(tuple => tuple.Item1.kayttajaNimi, "Käyttäjänimi", new { htmlAttributes = new { @class = "form-control" } })
                    <p>@ViewBag.kayttajanimi</p>
                    @Html.ValidationMessageFor(tuple => tuple.Item1.kayttajaNimi, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(tuple => tuple.Item1.salasana, "Muuta salasana", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.EditorFor(tuple => tuple.Item1.salasana, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                    @Html.ValidationMessageFor(tuple => tuple.Item1.salasana, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(tuple => tuple.Item2.etunimi, "Etunimi", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.EditorFor(tuple => tuple.Item2.etunimi, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.etunimi } })
                    @Html.ValidationMessageFor(tuple => tuple.Item2.etunimi, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(tuple => tuple.Item2.sukunimi, "Sukunimi", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.EditorFor(tuple => tuple.Item2.sukunimi, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.sukunimi } })
                    @Html.ValidationMessageFor(tuple => tuple.Item2.sukunimi, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(tuple => tuple.Item4.numero, "Puhelinnumero", new { htmlAttributes = new { @class = "form-control" } })
                    @Html.EditorFor(tuple => tuple.Item4.numero, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.puhnro } })
                    @Html.ValidationMessageFor(tuple => tuple.Item4.numero, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(tuple => tuple.Item3.postinumero, "Postinumero", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(tuple => tuple.Item3.postinumero, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.postinro } })
                    @Html.ValidationMessageFor(tuple => tuple.Item2.postitoimipaikka_Id, "", new { @class = "text-danger" })
                </div>
                @Html.ActionLink("Takaisin", "OpisSisalto", "OmaSisaltos", null, new { @class = "btn btn-light" })
                <button type="submit" class="btn btn-yellow">Tallenna tiedot</button>

            </form>

            }

        </div>

    </div>

</div>

<!--Kenttien validointiscriptejä...-->
@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
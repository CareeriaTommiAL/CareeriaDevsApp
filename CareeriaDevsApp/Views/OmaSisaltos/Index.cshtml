@model IEnumerable<CareeriaDevsApp.OmaSisalto>


@{
    ViewBag.Title = "Index";
}

<h2>Opiskelijaprofiilit(Admin)</h2>

<table class="table">
    <tr>
        <th>
            <p>Profiilikuva</p>
        </th>
        <th>
            <p>Nimi</p>
        </th>
        <th>
            <p>Opiskelijan omaesittely</p>
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
<tr>
    <td>
        @*Näytetään opiskelijan kuva URLista:*@
        <img src="@Html.Raw(HttpUtility.HtmlDecode(item.omaKuva))" width="200" />
    </td>
    <td>@*Näytetään opiskelijan koko nimi:*@
        @Html.DisplayFor(modelItem => item.Opiskelija.etunimi) @Html.DisplayFor(modelItem => item.Opiskelija.sukunimi)
    </td>
    <td>
        @*Näytetään opiskelijan itsemuokkaama "profiili":*@
        @Html.Raw(HttpUtility.HtmlDecode(item.omaTeksti))
    </td>

    <td>
        @Html.ActionLink("Muokkaa", "Edit", new { id = item.opiskelija_Id }) |
        @Html.ActionLink("Poista", "Delete", new { id = item.opiskelija_Id})
    </td>
</tr>
        
    }

</table>


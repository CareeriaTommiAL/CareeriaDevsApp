@model CareeriaDevsApp.OmaSisalto

@{
    ViewBag.Title = "Create";
}

<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckeditor/samples/js/sample.js"></script>

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>OmaSisalto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.omatAsetukset, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.omatAsetukset, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.omatAsetukset, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.omaKuva, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.omaKuva, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.omaKuva, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--CKEditor omasisällön omaTeksti kenttään-->
        <div class="form-group">
            @Html.LabelFor(model => model.omaTeksti, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.omaTeksti, new { htmlAttributes = new { @class = "form-control", @id = "OmaTeksti" } })
                @Html.ValidationMessageFor(model => model.omaTeksti, "", new { @class = "text-danger" })
                <script type="text/javascript" language="javascript">
                    CKEDITOR.replace(@Html.IdFor(model => model.omaTeksti));
                </script>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.opiskelija_Id, "opiskelija_Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("opiskelija_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.opiskelija_Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
    initOmaTeksti();
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

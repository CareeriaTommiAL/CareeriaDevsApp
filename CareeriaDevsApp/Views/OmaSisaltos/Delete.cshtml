@model CareeriaDevsApp.OmaSisalto

@{
    ViewBag.Title = "Delete";
}

<h3>Haluatko varmasti poistaa tämän?</h3>
<div>
    <h4>OmaSisalto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>Profiilikuva</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.omaKuva)
        </dd>

        <dt>
            <p>Opiskelijan omaesittely</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.omaTeksti)
        </dd>

        <dt>
            <p>Opiskelijan nimi</p>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Opiskelija.etunimi) @Html.DisplayFor(model => model.Opiskelija.sukunimi)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Poista" class="btn btn-default" /> |
            @Html.ActionLink("Takaisin", "Index")
        </div>
    }
</div>
